<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    tools:context="com.iiita.studentmessapp.Fragment.AboutFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/circular_avatar"
            android:layout_width="match_parent"
            android:layout_height="128dp" />

        <include
            android:id="@+id/user_card_about_id"
            layout="@layout/user_about_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="76dp" />

        <include
            android:id="@+id/user_activity_card"
            layout="@layout/user_activity_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_card_about_id"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp" />

        <include
            layout="@layout/developer_about_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="16dp" />

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="107dp"
            android:text="LogOut" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </android.support.v7.widget.CardView>

</FrameLayout>
